<Window x:Class="petshopmanagament.UpdatePetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:petshopmanagament"
        mc:Ignorable="d"
        Title="UpdatePetWindow" Height="300" Width="400">
    <StackPanel Margin="10">
        <Label>Name:</Label>
        <TextBox x:Name="txtName"/>
        <Label>Type:</Label>
        <TextBox x:Name="txtType"/>
        <Label>Breed:</Label>
        <TextBox x:Name="txtBreed"/>
        <Label>Age:</Label>
        <TextBox x:Name="txtAge"/>
        <Button Content="Update Pet" Click="UpdatePet_Click"/>
    </StackPanel>
</Window>
