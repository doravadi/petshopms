<Window x:Class="petshopmanagament.UpdateCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:petshopmanagament"
        mc:Ignorable="d"
        Title="UpdateCustomerWindow" Height="300" Width="400">
    <StackPanel Margin="10">
        <Label>Name:</Label>
        <TextBox x:Name="txtName"/>
        <Label>Email:</Label>
        <TextBox x:Name="txtEmail"/>
        <Label>Phone:</Label>
        <TextBox x:Name="txtPhone"/>
        <Button Content="Update Customer" Click="UpdateCustomer_Click"/>
    </StackPanel>
</Window>
