<Window x:Class="petshopmanagament.AddSaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:petshopmanagament"
        mc:Ignorable="d"
        Title="AddSaleWindow" Height="300" Width="400">
    <StackPanel Margin="10">
        <Label>Customer:</Label>
        <ComboBox x:Name="cbCustomers" DisplayMemberPath="Name"/>
        <Label>Pet:</Label>
        <ComboBox x:Name="cbPets" DisplayMemberPath="Name"/>
        <Label>Sale Date:</Label>
        <DatePicker x:Name="dpSaleDate"/>
        <Label>Sale Amount:</Label>
        <TextBox x:Name="txtSaleAmount"/>
        <Button Content="Add Sale" Click="AddSale_Click"/>
    </StackPanel>
</Window>
